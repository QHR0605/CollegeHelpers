<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/fav_picture"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:background="@drawable/pic">
        </ImageView>
        <TextView
            android:id="@+id/fav_content"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/demo"
            android:textSize="20sp">
        </TextView>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/fav_time"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="@string/demo_time"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textSize="15sp"/>

                <Button
                    android:layout_below="@+id/fav_time"
                    android:layout_toRightOf="@+id/fav_time"
                    android:id="@+id/fav_del"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ashbin"
                    >
                </Button>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bgray">
    </View>
</LinearLayout>